<div class="video-wrapper {{aspect}}">
    <iframe src="{{url}}" scrolling="no" allowfullscreen></iframe>
</div>
<p id="videourl">{{url}}</p>
<div id="videodata">
Video-Typ: <select id="videotype">
    <option value="youtube">youtube</option>
    <option value="matterhorn">matterhorn</option>
    <option value="url">url</option>
    <option value="dfb">dfb.tv</option>
</select><br>
<span id="videosrcname">URL</span><input type="text" id="videosrc">
</div>
<div id="videosettings">
    <span>Video automatisch starten<input type="checkbox" id="videoautostart" ></span>
    <span>Kontrollelemente verstecken<input type="checkbox" id="videocontrols" ></span> <br/>
    <span>Seitenverh&auml;ltnis<input type="radio" id="videoaspect169" name="videoaspect" value="aspect-169" checked>16:9 <input type="radio" id="videoaspect43" name="videoaspect" value="aspect-43">4:3</span> <br/>
    <span>Start<input id="videostartmin" type="number" min="0" placeholder="min" ><input id="videostartsec" type="number" step="1" max="59" min="0" placeholder="sek"></span> 
    <span>Ende<input id="videoendmin" type="number" min="0" placeholder="min"><input id="videoendsec" type="number" step="1" max="59" min="0" placeholder="sek"></span> <br/>
</div>
<div id="videostatus"><span class="status">&nbsp;</span></div>
<div id="videobuttons">
<button name="preview" class="button">Vorschau</button>
<button name="save" class="button">Speichern</button>
<button name="cancel" class="button">Abbrechen</button>
</div>

