{{#active}}
  
  <h2 class="testblock-header">{{title}}</h2>
  
  {{#description}}
    <div class="description">{{{description}}}</div>
  {{/description}}

  {{#exercises}}
    {{^skip_entry}}
      <ul class="exercise" id="exercise{{exercise_index}}">
        <li>
          <div class="exercisetitle">
              <button name="exercisenav" class="exercisenavbutton exercisenavback" button-data='{"id":"{{exercise_index}}", "numexes": "{{number_of_exercises}}", "direction": "back" }'></button>
              Frage {{exercise_index}} / {{number_of_exercises}}
              <button name="exercisenav" class="exercisenavbutton exercisenavnext" button-data='{"id":"{{exercise_index}}", "numexes": "{{number_of_exercises}}" , "direction": "next"}'></button>
          </div>
          <div class="exercise-content">
          {{#solved_completely}}
              <div class="messagebox messagebox_success">
                  {{#i18n}}Danke! Sie haben alle Aufgaben gelöst und können nun mit dem nächsten Abschnitt fortfahren.{{/i18n}}
              </div>
          {{/solved_completely}}
          <h3 class="exercise-title" >{{ title }}</h3>
          {{#tryagain}}
              <p class="exercise-tryagain">Ihr Lösungsversuch war noch nicht korrekt. Versuchen Sie es bitte nochmal.</p>
          {{/tryagain}}
          {{#correct}}
              <p class="exercise-correct">Ihre Lösung ist korrekt!</p>
          {{/correct}}
          {{^cloze_answers}}
            {{> _question}}
          {{/cloze_answers}}

          {{#show_solution}}
            {{#free_text_answers}}
              {{> _free_text_solution}}
            {{/free_text_answers}}

            {{^free_text_answers}}
              {{#matching_exercise_answers}}
                {{> _matching_exercise_answers}}
              {{/matching_exercise_answers}}
              {{^matching_exercise_answers}}
                {{> _solution.mustache}}
              {{/matching_exercise_answers}}
            {{/free_text_answers}}

            {{#cloze_answers}}
              {{> _cloze_solution}}
            {{/cloze_answers}}

            {{#self_test}}
              {{> _reset_exercise}}
            {{/self_test}}
          {{/show_solution}}

          {{^show_solution}}
            {{> _exercise_form_begin}}

            {{#cloze_answers}}
              {{> _cloze_question}}
            {{/cloze_answers}}

            {{#single_choice_answers}}
              {{> _single_choice_answers}}
            {{/single_choice_answers}}

            {{#multiple_choice_answers}}
              {{> _multiple_choice_answers}}
            {{/multiple_choice_answers}}

            {{#free_text_answers}}
              {{> _free_text_answers}}
            {{/free_text_answers}}

            {{#matching_exercise_answers}}
              {{> _matching_exercise_answers}}
            {{/matching_exercise_answers}}

            {{> _exercise_form_end}}
          {{/show_solution}}
          </div>
        </li>
      </ul>
      {{/skip_entry}}
     
  {{/exercises}}
  
  {{^exercises}}
    {{#typemismatch}}
        <p>Der Aufgabentyp hat sich geändert. Bitte wenden Sie sich an Ihren Dozenten.</p>
    {{/typemismatch}}
    {{^typemismatch}}
        {{#i18n}}Keine Aufgaben.{{/i18n}}
    {{/typemismatch}}
  {{/exercises}}
{{/active}}

{{^active}}
  {{> _vips_deactivated}}
{{/active}}
